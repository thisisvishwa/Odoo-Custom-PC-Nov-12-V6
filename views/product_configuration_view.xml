        <record id="view_product_config_tree" model="ir.ui.view">
            <field name="name">product.config.tree</field>
            <field name="model">product.config</field>
            <field name="arch" type="xml">
                <tree string="Product Configuration">
                    <field name="cpu"/>
                    <field name="gpu"/>
                    <!-- Add other PC component fields here -->
                </tree>
            </field>
        </record>

